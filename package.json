{
  "name": "omnidesign",
  "version": "1.0.0",
  "description": "Universal Design System with Agent Skills format - 25 themes, 39 fonts, OKLCH colors",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:tokens && npm run build:themes",
    "build:tokens": "node scripts/build-tokens.js",
    "build:themes": "npx tsx scripts/generate-theme.ts",
    "build:palettes": "node scripts/generate-palettes.js && node scripts/generate-palette-svgs.js",
    "convert:colors": "npx tsx scripts/convert-colors.ts",
    "validate": "node scripts/validate-tokens.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run validate && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/culori": "^4.0.1",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "autoprefixer": "^10.4.24",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "culori": "^4.0.2",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3"
  }
}
